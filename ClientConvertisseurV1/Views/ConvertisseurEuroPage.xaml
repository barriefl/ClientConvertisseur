<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ClientConvertisseurV1.Views.ConvertisseurEuroPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ClientConvertisseurV1.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <RelativePanel VerticalAlignment="Center">
        <TextBlock Name="TextBlockMontantEuro" RelativePanel.AlignHorizontalCenterWithPanel="True" Text="Montant en euros">
            
        </TextBlock>
        <TextBox Name="TextBoxMontantEuro" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.Below="TextBlockMontantEuro" Margin="10" Width="200" Text="0">

        </TextBox>

        <TextBlock Name="TextBlockDevise" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.Below="TextBoxMontantEuro" Text="Devise" Margin="10">

        </TextBlock>
        <ComboBox Name="ComboBoxDevises" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.Below="TextBlockDevise" Margin="10" Width="200" ItemsSource="{Binding Devises}">

        </ComboBox>
        <Button Name="ButtonConvertir" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.Below="ComboBoxDevises" Content="Convertir" Margin="10" Width="200">

        </Button>

        <TextBlock Name="TextBlockMontantDevise" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.Below="ButtonConvertir" Text="Montant en devise" Margin="10">

        </TextBlock>
        <TextBox Name="TextBoxMontantDevise" IsReadOnly="True" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.Below="TextBlockMontantDevise" Width="200" Text="0">

        </TextBox>
    </RelativePanel>
</Page>
